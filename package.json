{
  "name": "project_brito",
  "version": "1.0.0",
  "packageManager": "pnpm@10.19.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "lint": "pnpm --filter ./backend lint && pnpm --filter ./frontend lint",
    "install": "pnpm --filter ./backend install && pnpm --filter ./frontend install",
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && pnpm run dev",
    "build": "pnpm run build:frontend",
    "build:frontend": "cd frontend && pnpm run build",
    "start": "cd backend && pnpm start",
    "deploy": "pnpm run build && pnpm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.38.0"
  }
}
